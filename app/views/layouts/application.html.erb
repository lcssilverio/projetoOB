<!DOCTYPE html>
<html>
  <head>
    <title>BlogOB</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= nav_bar brand: "Blog do Lucas", brand_link: root_url do %>
      <%= menu_group do %>
        <%= menu_item "Criar Post", new_post_path %>
      <% end %>
      <%= form_tag busca_post_path, method: :get, class:"navbar-form navbar-right" do %>
        <div class="form-group">
          <%= text_field_tag :titulo, @titulo, class:"form-control" %>
          <%= button_to "Buscar", nil, class:"btn btn-default" %>
       </div>
      <% end %>
    <% end %>
	  <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
