<%= form_for [@commentable, @comment], format: :js, remote: true do |f| %>
  <% if @comment.errors.any? %>
    <div class="error_messages">
      <h2>Por favor corrija os seguintes erros.</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_area :content, rows: 4 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>